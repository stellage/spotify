<div>
  <%= form_for([@song.playlist, @song]) do |f| %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <br>
    <div class="artist">
      <%= f.label :artist %><br>
      <%= f.text_field :artist %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>