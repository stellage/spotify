<p id="notice"><%= notice %></p>

<h1 class="green">All Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="green"><%= user.name %></td>
        <td><%= link_to 'Visit Page', user %>
        <% if user ==  current_user %>
          <span> | </span>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
